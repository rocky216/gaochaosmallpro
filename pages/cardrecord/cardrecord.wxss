/* pages/cardrecord/cardrecord.wxss */
.weeks{
  width: 100%;
  display: flex;
  height: 60rpx;
  background: #fff;
}
.weeks text {
  flex: 1;
  line-height: 60rpx;
  color: #dd4a68;
  background: #fff;
  width: 100rpx;
  text-align: center;
}
.nowDate {
  display: flex;
  text-align: center;
  line-height: 80rpx;
  justify-content:center;
  color: #dd4a68;
}
.nowDate text {
  width: 160rpx;
}
.days {
  display: flex;
  flex-wrap: wrap;
  background: #fff;
}
.days view {
  width: 14.2%;
  text-align: center;
}
.days view.active text.day {
  color: green;
  font-weight: bold;
}
.days text:nth-child(1) {
  display: block;
  padding-top: 20rpx;
}
.days text:nth-child(2){
  display: block;
  height: 20rpx;
  line-height: 20rpx;
  padding-bottom: 30rpx;
  font-size: 50rpx;
}
.colorRed{
  color: red;
}
.colorGreen{
  color: green;
}
.infonone {
  text-align: center;
  background: #fff;
  padding: 50px;
  margin-top: 20rpx;
}
.infoWrap {
  background: #fff;
  margin-top: 30rpx;
  padding:20rpx 30rpx;
}
.info_item {
  margin-top: 20rpx;
}
.info_item text {
  margin-right: 20rpx;
}
.info_item text:nth-child(2){
  color: green;
}
.info_item text:nth-child(3){
  color:#fff;
  background: red;
  padding: 0 10rpx;
  border-radius: 2rpx;
}
.members {
  background: #fff;
  padding: 20rpx;
  margin:20rpx 0;
}